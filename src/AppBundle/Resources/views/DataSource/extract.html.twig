{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Extract Data</h1>
        </div>
    </div>
    <div class="row">
        <form name="form" method="post" action="{{ path('homepage') }}">
            <div class="form-group col-lg-8">
                <label class="control-label">Data source:</label>
                <input type="text" name="form[dataSource]" class="form-control"/>
            </div>
            <div class="form-group col-lg-4">
                <label class="control-label">Type:</label>
                <select name="form[type]" class="form-control">
                    <option selected>-- Choose a type --</option>
                    <option value="json">JSON</option>
                    <option value="xml">XML</option>
                </select>
            </div>
            <div class="col-lg-12 text-right">
                <button class="btn btn-success btn-sm" type="submit">Extract</button>
            </div>
        </form>
    </div>
{% endblock %}