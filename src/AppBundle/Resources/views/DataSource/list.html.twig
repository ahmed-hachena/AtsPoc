{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data source list (Users)</h1>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Company</th>
                    <th>Friends</th>
                    <th class="text-center">Age</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name.first }}</td>
                        <td>{{ user.name.last }}</td>
                        <td>{{ user.company }}</td>
                        <td>
                            <ul>
                                {% for friend in user.friends %}
                                    <li>{{ friend.name }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td class="text-center">{{ user.age }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}